        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        ></TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dilip3"
        android:layout_marginTop="10dp"
        android:text="Specialist:Medicine Doctor "
        android:textSize="25dp"
        android:textStyle="bold"
        android:id="@+id/dilip4"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        ></TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dilip4"
        android:layout_marginTop="10dp"
        android:id="@+id/dilip5"
        android:text="E-mail: harshit123@gmail.com"
        android:textSize="25dp"
        android:layout_marginRight="1dp"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        ></TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dilip6"
        android:layout_below="@+id/dilip5"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:text="Address: Ramadevi Bhauti Kanpur"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        ></TextView>

    <TextView
        android:id="@+id/dilip7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dilip6"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:inputType="phone"
        android:text="Mobile No:8840437485"
        android:textSize="25dp"
        android:textStyle="bold" />
